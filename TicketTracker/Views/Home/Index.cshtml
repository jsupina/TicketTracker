@model TicketTracker.Models.IndexPostModel

@{
    ViewBag.Title = "Home Page";
}

    <div class="row">
        <br />
        <h1 class="text-center">Ticket Tracker</h1>
            <div class="col-md-6">
                <h2 class="text-center">Open Tickets</h2>
                <br />
                <table id="table_id" class="display">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Severity</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model.Open)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.Id)
                                </td>
                                <td>
                                    @Html.ActionLink(@ticket.Name, "Details", new { id = ticket.Id })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.Severity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.Date)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <h2 class="text-center">Closed Tickets</h2>
                <br />
                <table id="table_id2" class="display">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Severity</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model.Closed)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.Id)
                                </td>
                                <td>
                                    @Html.ActionLink(@ticket.Name, "Details", new { id = ticket.Id })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.Severity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.Date)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
     </div>
    <br />
    <br />
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-4 text-center">
            <button class="btn-primary, btn-lg">@Html.ActionLink("Submit New Ticket", "Create")</button>
        </div>
        <div class="col-md-4">

        </div>
    </div>

@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({
                "pageLength": 15,
                "lengthChange": false
            });
        });

        $(document).ready(function () {
            $('#table_id2').DataTable({
                "pageLength": 15,
                "lengthChange": false
            });
        });
    </script>
}